@using SGUMusicShop.Models
@{
    ViewBag.Title = "Index";
    CommonInfo x = (CommonInfo)HttpContext.Current.Application["dungChung"];
}
<!--music-->
<div class="bikes">
    <h3>SẢN PHẨM PIANO TIÊU BIỂU</h3>
    <div class="bikes-grids">
        <ul id="flexiselDemo1">
            @foreach (SanPham i in x.SanPhamPiano(4))
            {
                <li>
                    <img src="@Html.DisplayFor(model => i.AnhDD)" alt="@Html.DisplayFor(model => i.TenSP)" />
                    <div class="bike-info">
                        <div class="model">
                            <h4>@Html.DisplayFor(model => i.TenSP)<span>@Html.DisplayFor(model => i.GiaBan)</span></h4>
                        </div>
                        <div class="model-info">
                            <a href="@Url.Action("Details", "Products", new { id = i.MaSP})">Xem nhanh</a>
                            <a href="/ShoppingCart/AddtoCart/@i.MaSP">Mua Ngay</a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="viw">
                        <a href="music.html">Xem nhanh</a>
                    </div>
                </li>
            }
        </ul>
        <script type="text/javascript">
            $(window).load(function () {
                $("#flexiselDemo1").flexisel({
                    visibleItems: 3,
                    animationSpeed: 1000,
                    autoPlay: true,
                    autoPlaySpeed: 3000,
                    pauseOnHover: true,
                    enableResponsiveBreakpoints: true,
                    responsiveBreakpoints: {
                        portrait: {
                            changePoint: 480,
                            visibleItems: 1
                        },
                        landscape: {
                            changePoint: 640,
                            visibleItems: 2
                        },
                        tablet: {
                            changePoint: 768,
                            visibleItems: 3
                        }
                    }
                });
            });
        </script>
        <script type="text/javascript" src="~/Scripts/jquery.flexisel.js"></script>
    </div>
</div>
<!-- TRANG PHẢN HỒI -->
<div class="contact">
    <div class="container">
        <h3>LIÊN HỆ VỚI CHÚNG TÔI</h3>
        <p>Chúng tôi sẽ gửi phản hồi cho bạn trong thời gian sớm nhất.</p>
        <form>
            <input type="text" placeholder="Họ" required="">
            <input type="text" placeholder="Tên" required="">
            <input class="user" type="text" placeholder="abc@gmail.com" required=""><br>
            <textarea placeholder="Vui lòng mô tả chi tiết nội dung tại đây"></textarea>
            <input type="submit" value="GỬI NGAY">
        </form>
    </div>
</div>

